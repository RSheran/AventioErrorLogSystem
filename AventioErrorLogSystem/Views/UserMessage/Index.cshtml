
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Page/UserMessage.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="page-header" style="margin-top: -10px; margin-left: 2%">
            <h2>
                User Message Portal
                <small>&nbsp;send/view messages </small>
            </h2>
        </div>
    </div>
    <div id="form-usermessage" class="col-md-12 col-sm-12 col-xs-12">
        <form class="form-horizontal">

            <div class="panel panel-primary">
                <div class="panel-heading">

                    <span class="pull-right">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active"><a href="#tabSendMsg" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-arrow-right"></i>&nbsp;Send Message</a></li>
                            <li><a href="#tabviewSentMsg" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-eye-open"></i>&nbsp; View Message</a></li>
                            <li><a href="#tabreplyToMsg" role="tab" data-toggle="tab"><i class="glyphicon glyphicon-share-alt"></i>&nbsp; Reply To Message&nbsp;<span class="badge" id="spnUnreadCount">0</span></a></li>


                        </ul>
                    </span>
                    <br />
                    <h3 class="panel-title" style="margin-top:-1%"><i class="glyphicon glyphicon-envelope"></i>&nbsp;Message Controls</h3>
                </div>



                <div class="panel-body">


                    <div class="tab-content">
                        <div class="tab-pane active col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 " id="tabSendMsg">
                            <div class="row">
                                <div class="form-group  col-sm-4">
                                    <select class="chzn-select" id="drpSMGUserList" multiple="multiple" style="width:200px;"></select>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group  col-sm-6">
                                    <label for="txtSMGSubject">Subject</label>
                                    <input type="text" class="form-control" id="txtSMGSubject">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group  col-sm-8">
                                    <label for="txtSMGMessage">Message</label>
                                    <textarea class="form-control" rows="3" id="txtSMGMessage"></textarea>
                                </div>
                            </div>

                            <button type="button" id="btnSMGSend" class="btn btn-info">Send</button>
                            <button type="button" id="btnSMGCancel" class="btn">Cancel</button>
                        </div>


                        <div class="tab-pane col-md-10 col-sm-10 col-md-offset-1 col-sm-offset-1" id="tabviewSentMsg">

                            <div class="row" id="dvVSMGSentMessagesTable">
                                <table class="display table-bordered" id="tblVSMGSendMessages" cellspacing="0" style="margin-top: 5%">
                                    <thead>
                                        <tr>
                                            <th style="font-weight:bold;width:15%"></th>
                                            <th style="font-weight:bold;width:15%">To User</th>
                                            <th style="font-weight:bold;width:15%">Send Date</th>
                                            <th style="font-weight:bold;width:15%">Dilivered Date</th>
                                            <th style="font-weight:bold;width:20%">Subject</th>
                                            <th style="font-weight:bold;width:30%">Message</th>
                                            <th style="font-weight:bold;width:5%">Delete</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                            <div class="raw">
                                <div class="form-group  col-sm-10">
                                    <button type="button" id="btnVSMGDeleteAll" class="btn btn-info">Delete All Messages</button>
                                    <button type="button" id="btnVSMGDelete" class="btn btn-danger">Delete</button>
                                    <button type="button" id="btnVSMGCancel" class="btn">Cancel</button>
                                </div>
                            </div>
                        </div>


                        <div class="tab-pane col-md-12 col-sm-12 col-md-offset-1 col-sm-offset-1" id="tabreplyToMsg">
                            @*<div class="container1">

                                <p>Hello. How are you today?</p>
                                <span class="time-right1">11:00</span>
                            </div>

                            <div class="container1 darker">

                                <p>Hey! I'm fine. Thanks for asking!</p>
                                <span class="time-left1">11:01</span>
                            </div>

                            <div class="container1">

                                <p>Sweet! So, what do you wanna do today?</p>
                                <span class="time-right1">11:02</span>
                            </div>

                            <div class="container1 darker">

                                <p>Nah, I dunno. Play soccer.. or learn more coding perhaps?</p>
                                <span class="time-left1">11:05</span>
                            </div>*@
                        </div>


                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


