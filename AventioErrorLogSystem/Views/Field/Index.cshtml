@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Page/Field.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="page-header" style="margin-top: -10px; margin-left: 2%">
            <h3>
                Manage Field
                <small>&nbsp;add/edit Fields</small>
            </h3>
        </div>

        <div id="form-Field" class="col-md-10 col-sm-10 col-xs-10">
            <form class="form-horizontal">

                <div class="row" style="margin-left: 1%">
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        <div style="margin-bottom: 10px" class="input-group">
                            <span class="input-group-addon">Field Code&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <input id="txtFieldCode" type="text" class="form-control txt_length_10" style="width: 100%"
                                   placeholder="Field Code" />
                            <span class="input-group-addon " id="spn-txtFieldCode"></span>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-2 col-xs-2">
                        <div id="dvSearchErrorCaption">
                            <button type="button" id="btnSearchField" class="btn btn-md btn-info">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>

                    </div>
                </div>

                <div class="row" style="margin-left: 1%">
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        <div style="margin-bottom: 10px" class="input-group">
                            <span class="input-group-addon">Field Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <input id="txtFieldName" type="text" class="form-control" style="width: 100%"
                                   placeholder="Field Name" />

                            <span class="input-group-addon " id="spn-txtFieldName"></span>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-left: 1%">
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        <div style="margin-bottom: 10px" class="input-group">
                            <span class="input-group-addon">Field Description&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <textarea id="txtFieldDescription" type="text" class="form-control" style="width: 100%"
                                      placeholder="Field Description"></textarea>

                            <span class="input-group-addon " id="spn-txtFieldDescription"></span>
                        </div>
                    </div>
                </div>

                <div class="row" style="margin-left: 3%">

                    <label class="col-sm-2 col-md-2 col-xs-2 control-label" style="text-align: left; margin-left: -2%">Is Active</label>
                    <div class="col-sm-1 col-md-1 col-xs-1" style="margin-left: -5%;">
                        <input id="chkIsFieldActive" type="checkbox" />
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-7 col-sm-7 col-xs-7">
                        <div style="float: right">
                            <button type="button" id="btnReset" class="btn btn-large btn-warning" style="margin-right: 10px">
                                Reset
                            </button>

                            <button type="button" id="btnSave" class="btn btn-large btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <div id="FieldPopUpModal" class="modal">
        <div class="alert alert-info" role="alert">
            <b>Note:</b>Select a Field <b>from the grid</b> by <b>clicking on the relevant row</b>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6" style="margin-left:8%">
                <div style="margin-bottom: 10px;" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                    <input id="txtSearchError" type="text" class="form-control" style="width: 100%" value="" placeholder="type error caption,error detail,Field,field or client" />
                </div>

            </div>
            <div class="col-md-3 col-sm-3 col-xs-3" style="float:right">
                <select class="form-control" name="state" id="maxRows">
                    <option value="5000">Show All Rows</option>

                    <option value="5">5</option>

                    <option value="10">10</option>

                    <option value="15">15</option>

                    <option value="20">20</option>

                    <option value="50">50</option>

                    <option value="70">70</option>

                    <option value="100">100</option>

                </select>

            </div>
        </div>

        <div class="row">
            <div class="col-md-11 col-sm-11 col-xs-11 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
                <div style="height: 300px; overflow: auto;">
                    <table data-toggle="table" class="table table-striped table-hover" id="tblField">

                        <caption style="border: inherit; background-color: lightgrey; color: black">
                            <span class="align-left"><strong>Fields</strong></span>
                        </caption>
                        <thead>
                            <tr>
                                <th data-field="FieldCode">Code</th>
                                <th data-field="FieldName">Name</th>
                                <th data-field="FieldDescription">Description</th>
                                <th data-field="isActive" class="hidecol"></th>
                                <th data-field="isActive">Is Active</th>


                            </tr>
                        </thead>

                    </table>
                </div>

                <ul class="pagination pagination-md"></ul>

                <hr />
                <div style="float: right;margin-top:2%">
                    <button type="button" id="btnResetPopup" class="btn btn-md btn-default" style="margin-right: 10px">
                        Reset
                    </button>


                    <button type="button" id="btnChangeStatus" class="btn btn-md btn-primary">
                        Update Status
                    </button>
                    <button type="button" id="btnActiveAll" class="btn btn-md btn-info">
                        Active All
                    </button>
                    <button type="button" id="btnInactiveAll" class="btn btn-md btn-warning">
                        Inactive All
                    </button>
                </div>


            </div>

        </div>

    </div>
</div>

