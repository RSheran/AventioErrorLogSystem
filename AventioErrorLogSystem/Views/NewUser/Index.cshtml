<body style="background: url('') no-repeat center center fixed !important;font-family: 'Segoe UI'">

    <form id="form1">

        <div class="container-fluid">

            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">

                        <p style="font-family: 'Segoe UI'; font-size: x-large; color: white; margin-left: -5%"><i class="fa fa-list"></i>&nbsp;Aventio Error Log Knowledge Base System</p>


                        <div class="nav-collapse">
                            <ul class="nav pull-right"></ul>
                            <ul class="nav pull-right">
                                <li class="dropdown" style="margin-top: -20%; margin-left: -20%">
                                    <b><span id="date_time_2"></span></b>
                                    <script type="text/javascript">window.onload = date_time_landing_page('date_time_2');</script>

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
                                    <div class="alert alert-info" role="alert">
                                        <b>Hi!..Be a part of the Aventio Error Log System by signing up...</b>

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-8 col-sm-8 col-xs-8 col-md-offset-2 col-sm-offset-2 col-xs-offset-2">
                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="width: 18%;text-align:left">Username</span>
                                        <input id="txtUsername" type="text" class="form-control" style="width: 100%"
                                               placeholder="Username" />

                                        <span class="input-group-addon " id="spanUName"></span>
                                    </div>

                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="width: 18%;text-align:left">User Group</span>
                                        <select class="form-control" id="drpUserGroup"></select>
                                        <span class="input-group-addon " id="spanUserGroup"></span>
                                    </div>

                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="width: 18%;text-align:left">Full Name</span>
                                        <input id="txtFullName" type="text" class="form-control" style="width: 100%"
                                               placeholder="Full Name" />

                                        <span class="input-group-addon " id="spanFullName"></span>
                                    </div>
                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="width: 18%;text-align:left">Calling Name</span>
                                        <input id="txtCallingName" type="text" class="form-control" style="width: 100%"
                                               placeholder="Calling Name" />

                                        <span class="input-group-addon " id="spanCallingName"></span>
                                    </div>
                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="width: 18%;text-align:left">E-mail</span>
                                        <input id="txtUserEmail" type="email" class="form-control" style="width: 100%"
                                               placeholder="E-Mail" />

                                        <span class="input-group-addon " id="spanEmail"></span>
                                    </div>
                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="width: 18%;text-align:left">Password</span>
                                        <input id="txtPassword" type="password" class="form-control" style="width: 100%"
                                               placeholder="Password" />

                                        <span class="input-group-addon " id="spanPassword"></span>
                                    </div>
                                    <div style="margin-bottom: 10px" class="input-group">
                                        <span class="input-group-addon" style="text-align:left">Confirm Password</span>
                                        <input id="txtConPassword" type="password" class="form-control" style="width: 100%"
                                               placeholder="Confirm Password" />

                                        <span class="input-group-addon " id="spanConPassword"></span>
                                    </div>
                                    @if (ViewBag.UserId != 0 && ViewBag.UserType == "Administrator")
                                    {
                                        <div style="margin-bottom: 10px;display:block" class="input-group">
                                            <input type="text" disabled="disabled" placeholder="Is Active" class="form-control" />
                                            <span class="input-group-addon">
                                                <input type="checkbox" id="chkIsUserActive" />
                                            </span>

                                        </div>
                                    }
                                    else
                                    {
                                        <div style="margin-bottom: 10px;display:none" class="input-group">
                                            <input type="text" disabled="disabled" placeholder="Is Active" class="form-control" />
                                            <span class="input-group-addon">
                                                <input type="checkbox" id="chkIsUserActive" />
                                            </span>

                                        </div>

                                    }

                                    @*<div style="margin-bottom: 10px" class="input-group">

                                            <span class="input-group-addon"  style="width: 18%;text-align:left">Is Active</span>
                                            <input id="chkIsUserActive" type="checkbox"  style="width: 100%" />
                                            <span class="input-group-addon " id="spanChkIsUserActive"></span>

                                        </div>*@

                                    <div class="row" style="margin-top: 5%">
                                        <div id="errorStrip">
                                            <div class="alert alert-danger" role="alert" id="userAlert">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row" style="margin-top: 5%">
                                        <div class="col-md-6 col-sm-6 col-xs-6 ">
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6 ">
                                            <div style="margin-top: -10%">
                                                <button type="button" id="btnSaveUser" class="btn btn-large btn-primary" style="float: right; margin-left: 2%">
                                                    <i class="glyphicon glyphicon-saved"></i>Sign Up
                                                </button>

                                                <button type="button" id="btnResetUser" class="btn btn-large btn-info"
                                                        style="float: right">
                                                    <i class="glyphicon glyphicon-remove-sign"></i>Reset
                                                </button>


                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <div id="dvHiddenFields">

                <input type="hidden" value=@ViewBag.UserType id="hdnUserType" runat="server" />
                <input type="hidden" value=@ViewBag.UserID id="hdnUserID" runat="server" />


            </div>

        </div>
    </form>

</body>


